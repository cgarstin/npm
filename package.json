{
    "name": "@gik/npm",
    "version": "0.1.0-beta.2",
    "description": "Scripts for your EcmaScript workflow.",
    "license": "MIT",
    "homepage": "https://github.com/gikmx/npm",
    "contributors": [
        "Héctor Menéndez <hector@gik.mx>"
    ],
    "keywords": [
        "npm",
        "yarn",
        "script",
        "scripts",
        "npm scripts",
        "yarn scripts"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gikmx/npm.git"
    },
    "bugs": {
        "url": "https://github.com/gikmx/npm/issues"
    },
    "os": [
        "linux",
        "darwin"
    ],
    "engines": {
        "node": ">=6.11.3",
        "npm": ">=5.4.2"
    },
    "bin": {
        "gik-npm": "./lib/bin.js"
    },
    "directories": {
        "src": "./src",
        "out": "./lib",
        "test": "./test"
    },
    "scripts": {
        "command:docs": "documentation",
        "command:lint": "eslint",
        "command:test": "ava",
        "command:covr": "nyc",
        "command:babel": "rm -Rf ./lib && babel -d ./lib ./src && chmod +x ./lib/bin.js",
        "ver": "./lib/bin.js version",
        "coverage": "./lib/bin.js test coverage",
        "lint": "./lib/bin.js lint",
        "docs": "./lib/bin.js docs",
        "build": "(./lib/bin.js build || npm run command:babel -s || exit 1) && chmod +x ./lib/bin.js",
        "test": "npm run build -s && npm run lint src",
        ":start": "nodemon -V -e js,json -w $npm_package_directories_src -w $npm_package_directories_test",
        "start": "npm run :start -s -- -x",
        "precommit": "npm test -s && npm run ver -s $([ -z $VER ] && echo patch || echo $VER) && npm run docs -s",
        "pub:beta": "npm test -s && npm publish --tag beta",
        "pub:release": "npm test -s && npm publish --tag latest"
    },
    "peerDependencies": {},
    "dependencies": {
        "@gik/tools-streamer": "0.0.5",
        "ava": "^0.22.0",
        "babel-cli": "^7.0.0-beta.3",
        "babel-core": "^7.0.0-beta.3",
        "babel-plugin-syntax-dynamic-import": "^7.0.0-beta.3",
        "babel-polyfill": "^7.0.0-beta.3",
        "babel-preset-env": "^7.0.0-beta.3",
        "babel-preset-stage-2": "^7.0.0-beta.3",
        "babel-register": "^7.0.0-beta.3",
        "chalk": "^2.1.0",
        "debug": "^3.1.0",
        "deepmerge": "^2.0.0",
        "eslint": "^4.8.0",
        "handlebars": "^4.0.11",
        "husky": "^0.14.3",
        "jsdoc-babel": "^0.3.0",
        "jsdoc-to-markdown": "^3.0.0",
        "nodegit": "^0.20.2",
        "npm": "^5.4.2",
        "nyc": "^11.3.0",
        "read-package-json": "^2.0.12",
        "shelljs": "^0.7.8",
        "source-map-support": "^0.5.0"
    },
    "devDependencies": {
        "@gik/eslint-config-node": "0.0.3",
        "nodemon": "^1.12.1"
    },
    "ava": {
        "require": [
            "babel-register"
        ],
        "babel": {
            "extends": "./.babelrc"
        }
    },
    "@gik/npm": {
        "jsdoc": {
            "private": false
        }
    }
}
